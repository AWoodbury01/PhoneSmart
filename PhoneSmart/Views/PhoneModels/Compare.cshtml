@model PhoneSmart.Models.PhoneViewModels.PhoneCompareViewModel
@{ ViewData["comparePhones"] = "Compare"; }

@*<p>@Model.PhoneOne.Manufacturer</p>*@
@*<div class="form-group">
        <label asp-for="PhoneDropdownOne" class="control-label"></label>
        <select asp-for="PhoneDropdownOne" class="form-control" asp-items="PhoneDropdownOne"></select>
    </div>*@

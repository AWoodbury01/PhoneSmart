@model PhoneSmart.Models.Phone

@{ ViewData["Title"] = "Details"; }

@* Heading *@
<div class="container heading-container">
    <div class="heading-title w-50 mx-auto mt-5 mb-5">
        <h1 class="d-flex justify-content-center mx-auto display-4 font-weight-light">Details</h1>
    </div>
</div>

<div class="container">
    <div class="card">
        <div class="card-header">
            <h5 class="card-title">
                @Html.DisplayFor(model => model.PhoneModel.Manufacturer)
                @Html.DisplayFor(model => model.PhoneModel.Model)
            </h5>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-between">
                <h6>
                    Posted by:
                    <h4>@Html.DisplayFor(model => model.User.FirstName)</h4>
                </h6>
                <a href="#" class="btn btn-primary">Contact Seller</a>

            </div>
            <h3>User Phone Details</h3>
            <div>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    $@Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Color)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Color)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Storage)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Storage)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Condition)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Condition)
                </dd>
                <hr />
                <h3>Phone Specifications</h3>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PhoneModel.OS)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PhoneModel.OS)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PhoneModel.Ram)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PhoneModel.Ram)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PhoneModel.DisplaySize)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PhoneModel.DisplaySize)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PhoneModel.DisplayType)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PhoneModel.DisplayType)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PhoneModel.RefreshRate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PhoneModel.RefreshRate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PhoneModel.Processor)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PhoneModel.Processor)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PhoneModel.MainCam)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PhoneModel.MainCam)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PhoneModel.SecondaryCam)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PhoneModel.SecondaryCam)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PhoneModel.FrontCam)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PhoneModel.FrontCam)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PhoneModel.Battery)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PhoneModel.Battery)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PhoneModel.Security)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PhoneModel.Security)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PhoneModel.isWaterResist)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PhoneModel.isWaterResist)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PhoneModel.isWirelessCharge)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PhoneModel.isWirelessCharge)
                </dd>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.PhoneId">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </div>

    </div>

</div>

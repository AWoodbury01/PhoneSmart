@model IEnumerable<PhoneSmart.Models.Phone>

@{ ViewData["Title"] = "Index"; }

<h1>Phones</h1>

<p>
    <a asp-action="Create">Post New Phone</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input class="form-control form-control-sm"
                                 type="text"
                                 name="SearchString"
                                 value="@ViewData["CurrentFilter"]"
                                 placeholder="Ex: Apple, iPhone 11" />
        </p>
        @*<p>
                <input type="submit" value="Search" class="btn btn-default" asp-controller="Phone" asp-action="Index" />

            </p>*@
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PhoneModel.Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneModel.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Storage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Condition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.FirstName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.PhoneModel.Manufacturer)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PhoneModel.Model)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Color)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Storage)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Condition)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.User.FirstName)
    </td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.PhoneId">Edit</a> |
        <a asp-action="Details" asp-route-id="@item.PhoneId">Details</a> |
        <a asp-action="Delete" asp-route-id="@item.PhoneId">Delete</a>
    </td>
</tr>}
    </tbody>
</table>

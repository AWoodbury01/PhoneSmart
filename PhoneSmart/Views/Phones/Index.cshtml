@model IEnumerable<PhoneSmart.Models.Phone>

@{ ViewData["Title"] = "Index"; }

@* Heading *@
<div class="container heading-container">
    <div class="heading-title w-50 mx-auto mt-5 mb-5">
        <h1 class="d-flex justify-content-center mx-auto">Phones</h1>
    </div>
</div>

@* Create & Search *@
<div class="container d-flex justify-content-between mb-5">
    <div>
        <p>
            <a asp-action="Create">Post New Phone</a>
        </p>
    </div>
    <div>
        <form asp-action="Index" method="get">
            <div class="form-actions no-color">
                <p>
                    Search by Phone <input class="form-control form-control-sm"
                                           type="text"
                                           name="SearchString"
                                           value="@ViewData["CurrentFilter"]"
                                           placeholder="Ex: Apple, iPhone 11" />
                </p>
            </div>
        </form>
    </div>
</div>


@* Posts *@
<div class="container d-flex justify-content-around flex-wrap w-75" style="        height: auto;
  position: relative;
">
    @foreach (var item in Model)
    {
        <div class="card mb-lg-5" style="width: 18rem; height: 26rem;">
            @* Phone Image *@
            <div class="post-card-image-container"
                 style="        width: 18rem;
                height: 8rem;
                overflow: hidden;
            ">
                <img style="

                    "
                     class="card-img-top "
                     src="@item.PhoneModel.PhoneURL"
                     alt="Card image cap">
            </div>

            @* Post Body *@
            <div class="card-body">
                <h5 class="card-title">User: @Html.DisplayFor(modelItem => item.PhoneModel.Manufacturer)  @Html.DisplayFor(modelItem => item.PhoneModel.Model)</h5>
                <p class="card-text">@Html.DisplayFor(modelItem => item.User.FirstName)</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">@Html.DisplayNameFor(model => model.Color): @Html.DisplayFor(modelItem => item.Color)</li>
                <li class="list-group-item">@Html.DisplayNameFor(model => model.Storage): @Html.DisplayFor(modelItem => item.Storage)</li>
                <li class="list-group-item">@Html.DisplayNameFor(model => model.Condition): @Html.DisplayFor(modelItem => item.Condition)</li>
            </ul>
            <div class="card-body d-flex justify-content-center">
                <a class="card-link" asp-action="Edit" asp-route-id="@item.PhoneId">Edit</a>
                <a class="card-link" asp-action="Details" asp-route-id="@item.PhoneId">Details</a>
                <a class="card-link" asp-action="Delete" asp-route-id="@item.PhoneId">Delete</a>
            </div>
        </div>
    }
</div>

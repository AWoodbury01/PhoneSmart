@model IEnumerable<PhoneSmart.Models.Phone>

@{ ViewData["Title"] = "Index"; }

@* Heading *@
<div class="container heading-container">
    <div class="heading-title w-50 mx-auto mt-5 mb-5">
        <h1 class="d-flex justify-content-center mx-auto display-4 font-weight-light">Phones</h1>
    </div>
</div>

@* Create & Search *@
<div class="container d-flex align-items-center justify-content-between mb-5">
    <div>
        <button asp-action="Create" type="button" class="btn btn-labeled">
            <span class="btn-label"><i class="fas fa-mobile-alt fa-2x"></i></span>Post New Phone
        </button>
        <div class="d-flex align-items-center">
            <a class="btn btn-primary d-flex align-items-center" asp-action="Create">
                <span class="btn-label">
                    <i class="fas fa-mobile-alt fa-2x"></i>
                </span>
                Post New Phone
            </a>
        </div>
    </div>

    <div>
        <form asp-action="Index" method="get">
            <div class="no-color d-flex justify-content-center">
                <p class="h6 ">
                    Search by Phone <input class="form-control form-control-sm"
                                           type="text"
                                           name="SearchString"
                                           value="@ViewData["CurrentFilter"]"
                                           placeholder="Ex: Apple, iPhone 11" />
                </p>
            </div>
        </form>
    </div>
</div>


@* Posts *@
<div class="container d-flex justify-content-md-around flex-wrap h-100" style="">
    @foreach (var item in Model)
    {@* Post card *@
                    <div class="card shadow-lg post-card" style="width: 24rem; height: 19.5rem;">
                        <div class="card-content">
                            <div class="card-body">
                                <div class="media d-flex mb-sm-1">
                                    <div class="align-self-center h-75 w-25">
                                        <img class="float-left" style="
                                            height: 11.7rem; width: 6rem;
                                            " src="@item.PhoneModel.PhoneURL" alt="Alternate Text" />
                                    </div>
                                    <div class="media-body text-right">
                                        <h3>$@Html.DisplayFor(modelItem => item.Price)</h3>
                                        <span>@item.PhoneModel.Manufacturer</span>
                                        <span>@item.PhoneModel.Model</span>
                                    </div>
                                </div>
                                @* Edit Details Delete *@
                                <div class=" card-footer d-flex justify-content-center">
                                    <a class="card-link text-dark" asp-action="Edit" asp-route-id="@item.PhoneId">Edit</a>
                                    <a class="card-link text-dark" asp-action="Details" asp-route-id="@item.PhoneId">Details</a>
                                    <a class="card-link text-dark" asp-action="Delete" asp-route-id="@item.PhoneId">Delete</a>
                                </div>

                            </div>
                        </div>

                    </div>}
</div>
